{
  "name": "neynar-next",
  "description": "Create Farcaster apps with Next.js and Neynar",
  "version": "0.2.2",
  "author": "Alex Grover <hello@alexgrover.me> (https://alexgrover.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-grover/neynar-next.git"
  },
  "bugs": {
    "url": "https://github.com/alex-grover/neynar-next/issues"
  },
  "homepage": "https://github.com/alex-grover/neynar-next#readme",
  "keywords": [
    "farcaster",
    "nextjs",
    "neynar"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/server.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "check:lint": "eslint .",
    "fix:lint": "eslint . --fix",
    "check:format": "prettier --check --cache .",
    "fix:format": "prettier --write --cache .",
    "check:types": "tsc",
    "cz": "cz",
    "prepare": "is-ci || husky install"
  },
  "peerDependencies": {
    "next": "^13",
    "react": "^18",
    "react-dom": "^18",
    "viem": "^1"
  },
  "devDependencies": {
    "@alex-grover/eslint-config": "^0.0.5",
    "@alex-grover/prettier-config": "0.0.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@tsconfig/next": "^2.0.0",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-css-modules": "^2.11.4",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "next": "^13.5.2",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "viem": "^1.12.1"
  },
  "tsup": {
    "entry": {
      "index": "src/client/index.ts",
      "server": "src/server/index.ts"
    },
    "dts": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.!(ts|tsx|css)": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "@alex-grover",
      "next/core-web-vitals"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": "off"
    }
  },
  "eslintIgnore": [
    "dist",
    "example"
  ],
  "prettier": "@alex-grover/prettier-config",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
